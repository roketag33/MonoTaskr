{
  "manifest_version": 3,
  "name": "MonoTaskr",
  "version": "0.0.3",
  "default_locale": "en",
  "description": "MonoTaskr helps you stay productive by blocking distracting websites during focused work sessions.",
  "permissions": ["storage", "alarms"],
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_start"
    }
  ]
}
